

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index2</title>
    <link href="~/css/Style.css" rel="stylesheet" />
</head>
<body>

    <h4>Products</h4>
    <hr />

    <table border="1" cellspacing="2">
        <thead>
            <tr>
                <td>ID</td>

                <td>Name</td>

                <td>Price</td>

                <td>Quantity</td>

                <td>Image</td>

                <td>Status</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@ViewBag.prod.Id</td>

                <td>@ViewBag.prod.Name</td>

                <td>@ViewBag.prod.Price</td>

                <td>@ViewBag.prod.Quantity</td>

                <td>
                    <img src="~/images/@ViewBag.prod.Image" alt="Alternate Text" />
                </td>

                <td>@(ViewBag.prod.Status == true ? "Show" : "")</td>
            </tr>
        </tbody>
    </table>

</body>
</html>
