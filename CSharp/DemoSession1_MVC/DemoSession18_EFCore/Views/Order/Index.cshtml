@model IEnumerable<DemoSession18_EFCore.Models.Entities.Orders>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-controller="Order" asp-action="Add">Add</a>
</p>

<table class="table table-striped" border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>CreationDate</th>
            <th>Payment</th>
            <th>Status</th>
            <th>AccountId</th>
            <th>EmployeeId</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.CreationDate?.ToString("dd-mm-yyyy")</td>
                <td>@item.Payment</td>
                <td>@item.Status</td>
                <td>@item.Account.FullName</td>
                <td>@item.EmployeeId</td>
            </tr>
        }
    </tbody>
</table>